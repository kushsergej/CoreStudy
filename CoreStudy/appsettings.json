{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },


  "AllowedHosts": "*",


  //Database connection string
  "ConnectionStrings": {
    "NorthwindDatabase": "Server=(localdb)\\mssqllocaldb; Database=Northwind; Trusted_Connection=True;"
  },


  //Maximum (M) products count on Product page (show only first M products, others – ignored; if M == 0 show all products)
  "M": "0",


  //Path to log file
  "LogFilePath": "log.txt",


  //Caching on hard drive
  "Caching": {
    "CacheFolderPath": "ImagesCache",
    "MaxCountOfCachedImages": 3,
    "CacheExpirationTimeSec": 600
  }
}
