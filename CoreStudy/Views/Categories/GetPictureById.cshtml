@model byte[]

@{
    ViewData["Title"] = "CategoryPicture";
}

<h2> Category Picture </h2>

<div>
    @{
        string imgConverted = string.Format($"data: image/bmp; base64, {Convert.ToBase64String(Model)}"); 
    }

    @Html.Raw($"<img style='width:200px; height:200px;' src=\"{imgConverted}\" />")
</div>

<hr />
<form method="post" enctype="multipart/form-data" asp-controller="Categories" asp-action="UploadFile">

    <div class="form-group">
        <p> Upload new file using this form: </p>
        <input type="hidden" name="categoryId" value="@ViewBag.categoryId" />
        <input type="file" name="uploadImage" />
    </div>

    <div class="form-group">
        <input type="submit" name="submit" value="Upload" />
    </div>
</form>